{
  "permissions": {
    "deny": [
      "Bash(curl:*)",
      "Bash(rm:*)",
      "Edit(node_modules/**)",
      "Read(.env)",
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Edit(.env)",
      "Edit(.env.local)",
      "Edit(*.secret)",
      "Edit(*.key)",
      "Read(.env)",
      "Read(.env.local)"
    ]
  },
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "DISABLE_AUTOUPDATER": "0",
    "EDITOR": "zed",
    "ANTHROPIC_MODEL": "claude-opus-4-20250514"
  },
  "ignorePatterns": [
    "node_modules/**",
    ".pnpm-store/**",
    "yarn.lock",
    "package-lock.json",

    "dist/**",
    "build/**",
    ".next/**",
    ".nuxt/**",
    ".output/**",
    "coverage/**",
    ".nyc_output/**",

    "*.tsbuildinfo",
    "*.d.ts.map",

    ".vite/**",
    ".webpack/**",
    ".parcel-cache/**",
    ".rollup.cache/**",

    "test-results/**",
    "playwright-report/**",
    "cypress/videos/**",
    "cypress/screenshots/**",

    "*.log",
    "*.tmp",
    ".DS_Store",
    "Thumbs.db",

    ".env*",
    "!.env.example",

    ".vscode/**",
    ".idea/**",
    "*.swp",
    "*.swo"
  ],
  "ui": {
    "theme": "dark",
    "notifications": true,
    "vim_mode": false,
    "line_breaks": {
      "escape_enter": true,
      "meta_enter": true
    }
  },
  "git": {
    "auto_commit": false,
    "commit_message_template": "feat: %s"
  },
  "mcpServers": {}
}
